{{#with user}}
{{firstName}}
<form action="/me/edit" method="post">
    <label>Username:</label>
    <input id="username" name="username" type="text" value="{{userName}}" disabled readonly/>
    <br />
    <label>E-mail address:</label>
    <input id="email" name="email" type="email" value="{{email}}" disabled readonly/>
        <br />

    <label>First name:</label>
    <input id="first_name" name="first_name" type="text" value="{{firstName}}" required />
        <br />

    <label>Last name:</label>
    <input id="last_name" name="last_name" type="text" value="{{lastName}}" required />
        <br />
<label>CRM Status:</label>
    <input id="crm_status" name="crm_status" type="text" value="{{crmStatus}}" disabled readonly/>
    <br />
    <button>Submit</button>
</form>
{{/with}}

<pre>{{error}}</pre>

<a href="/me">Cancel</a>
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header" id="top">
            <h2 class="pageheader-title">Change your password</h2>
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
        </div>
        <div class="card">
            <!--<h5 class="card-header">Change password</h5>-->
            <div class="card-body">
                <form  action="changepassword" method="post">
                    <div class="form-group">
                        <label for="current_password" class="col-form-label">Current password</label>
                        <input id="current_password" class="form-control" name="current_password" type="password" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-form-label">New password</label>
                        <input id="password" class="form-control" name="password" type="password" />
                    </div>

                    <div class="form-group">
                        <label for="repeat-password" class="col-form-label">Repeat password</label>
                        <input id="repeat-password" class="form-control" name="repeat-password" type="password" />
                    </div>
                        
                    <hr>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <button class="btn btn-primary" type="submit">Change password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>  

